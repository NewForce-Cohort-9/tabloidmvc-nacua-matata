@model List<TabloidMVC.Models.Post>

@{
    ViewData["Title"] = "My Posts";
}

<h2>My Posts</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.UserProfile.DisplayName</td>
                <td>@post.Category.Name</td>
            </tr>
        }
    </tbody>
</table>


