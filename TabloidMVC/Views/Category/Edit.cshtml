@model TabloidMVC.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="card col-md-12 col-lg-8">
            <h3 class="mt-3 text-primary text-center card-title">Edit a Category</h3>
            <form class="mt-5 card-body" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="col-4">
                        <input type="submit" value="SAVE" class="btn btn-primary btn-block" />
                    </div>
                    <div class="col-4">
                        <a asp-action="Index" class="btn btn-danger btn-block">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
